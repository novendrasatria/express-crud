<%- include ../templates/header.ejs %>
  <div class="container">
    <br>
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/">Home</a></li>
      <li class="breadcrumb-item"><a href="/suppliers">Data Suppliers</a></li>
      <li class="breadcrumb-item active">Create New</li>
    </ol>
    <h3>Tambahkan Data Supplier</h3>
    <% if(alert.message != '') { %>
    <div class="alert alert-<%= alert.status %>">
      <%= alert.message %>
    </div>
    <% } %>
    <form action="/suppliers/create" method="post">
      <div class="form-group">
        <label for="name"> Nama:</label>
        <input type="text" value="<%= data.name %>" class="form-control" name="name" id="name" >
      </div>
      <div class="form-group">
        <label for="kota">Kota:</label>
        <input type="text" value="<%= data.kota %>" class="form-control" name="kota" id="kota">
      </div>
      <button type="submit" class="btn btn-primary">Kirim</button>
    </form>
  </div>

  <%- include ../templates/footer.ejs %>
