<%- include ../templates/header.ejs %>
  <div class="container">
    <br>
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/">Home</a></li>
      <li class="breadcrumb-item"><a href="/items">Data Item</a></li>
      <li class="breadcrumb-item active">Buat Baru</li>
    </ol>
    <h3>Tambahkan Data Item</h3>
    <% if(alert.message != '') { %>
    <div class="alert alert-<%= alert.status %>">
      <%= alert.message %>
    </div>
    <% } %>
    <form action="/items/create" method="post">
      <div class="form-group">
        <label for="name"> Nama:</label>
        <input type="text" value="<%= data.name %>" class="form-control" name="name" id="name" >
      </div>
      <div class="form-group">
        <label for="brand">Brand:</label>
        <input type="text" value="<%= data.brand %>" class="form-control" name="brand" id="kota">
      </div>
      <div class="form-group">
        <label for="codeitem">Kode Item:</label>
        <input type="text" value="<%= data.codeitem %>" class="form-control" name="codeitem" id="kota">
      </div>
      <button type="submit" class="btn btn-primary">Kirim</button>
    </form>
  </div>

  <%- include ../templates/footer.ejs %>
