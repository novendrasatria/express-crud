<%- include ../templates/header.ejs %>
  <div class="container">

    <br>
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/">Home</a></li>
      <li class="breadcrumb-item active">Cari</li>
    </ol>
    <h3>Cari Item</h3>
    <div class="card">
      <div class="card-body">
        <form  action="" method="get">
          <div class="form-group col-md-8 ">
              <label for="price" class="control-label">Nama Item</label>
              <input type="text"  class="form-control" id="price" name="name"/>
          </div>
          <div class="row">
            <div class="form-group col-xs-4 col-md-4">
                <label for="price" class="control-label">Harga Min</label>
                <input type="text"  class="form-control" id="price" name="minPrice"/>
            </div>
            <div class="form-group col-xs-4 col-md-4">
                <label for="price" class="control-label">Harga Max</label>
                <input type="text"  class="form-control" id="price" name="maxPrice"/>
            </div>
          </div>
          <button type="submit" class="btn btn-primary">Kirim</button>
        </form>
      </div>
      <%# Card Body %>
    </div>
    <%# Card %>
    <h3>Hasil Pencarian</h3>
    <table class="table">
      <thead>
        <th>Nama Item</th>
        <th>Nama Supplier</th>
        <th>Harga</th>
      </thead>
      <tbody>
        <% items.forEach((item) => { %>
          <tr>
            <td><%= item.Item.name %></td>
            <td><%= item.Supplier.name %></td>
            <td><%= item.price %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>

  </div>

  <%- include ../templates/footer.ejs %>
